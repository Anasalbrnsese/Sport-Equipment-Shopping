<%- include('../partails/header') -%>
    <%- include('../partails/navbar') -%>
        <%- include('../partails/flashMessageLogin') -%>

            <div class="container light-style flex-grow-1 container-p-y" style="height:auto;">
                <h4 class="font-weight-bold py-3 mb-4">Account Settings</h4>

                <div class="row">
                    <!-- Left column for Profile Image -->
                    <div class="col-md-4">
                        <div class="card overflow-hidden mb-4" style="border-radius:15px;">
                            <div class="card-body text-center">
                                <img src="<%= '/images/'+ User.avatar %>" alt="Profile Image"
                                    onerror="this.onerror=null; this.src='/images/default-avatar.png';"
                                    class="rounded-circle" style="width: 150px; height: 150px;">
                                <form action="/users/uploadAvatar" method="POST" enctype="multipart/form-data"
                                    class="mt-3">
                                    <label class="btn btn-outline-primary">
                                        Upload new photo
                                        <input type="file" class="account-settings-fileinput" name="avatar" id="avatar"
                                            hidden>
                                    </label>
                                    <input type="submit" name="avatar" class="btn btn-primary mt-2" value="Save Image">
                                </form>
                                <div class="text-light small mt-2">Allowed JPG, GIF, or PNG. Max size of 800K</div>
                            </div>
                        </div>
                    </div>

                    <!-- Right column for Settings Forms -->
                    <div class="col-md-8">
                        <div class="card overflow-hidden mb-4" style="border-radius:15px;">
                            <div class="card-body">
                                <!-- Change Password Form -->
                                <form action="/users/changePassword" method="POST">
                                    <h5 class="font-weight-bold">Change Password</h5>
                                    <div class="form-group">
                                        <label class="form-label">Current Password</label>
                                        <input type="password" class="form-control" name="currentPassword" required>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">New Password</label>
                                        <input type="password" class="form-control" name="newPassword" required>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Confirm New Password</label>
                                        <input type="password" class="form-control" name="confirmPassword" required>
                                    </div>
                                    <button type="submit" class="btn btn-primary mt-4">Change Password</button>
                                </form>

                                <hr class="my-4">

                                <!-- General Information Form -->
                                <form action="/users/updateProfile" method="POST">
                                    <h5 class="font-weight-bold">General Information</h5>
                                    <div class="form-group">
                                        <label class="form-label">Username</label>
                                        <input type="text" class="form-control mb-1" name="username"
                                            value="<%= User ? User.name : '' %>">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">Name</label>
                                        <input type="text" class="form-control" name="name"
                                            value="<%= User ? User.name : '' %>">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">E-mail</label>
                                        <input type="text" id="email" class="form-control" name="email"
                                            value="<%= User ? User.email : '' %>" disabled>
                                        <% if(User.isVerified==false){ %>
                                            <div class="alert alert-warning mt-3">
                                                Your email is not confirmed. Please check your inbox.<br>
                                                <a href="javascript:void(0)">Resend confirmation</a>
                                            </div>
                                            <% } %>
                                    </div>
                                </form>

                                <hr class="my-4">

                                <!-- Change Phone Number Form -->
                                <form action="/users/updatePhone" method="POST">
                                    <h5 class="font-weight-bold">Change Phone Number</h5>
                                    <div class="form-group">
                                        <label class="form-label">Phone Number</label>
                                        <input type="text" class="form-control" name="phone" placeholder="+962XXXXXXXXX"
                                            value="<%= User ? User.phone : '' %>">
                                    </div>
                                    <button type="submit" class="btn btn-primary mt-4">Save Phone Number</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
            <%- include('../partails/footer') -%>