<%- include('../partails/header') -%>
    <%- include('../partails/navbar') -%>
        <div class="container my-5">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card product-card border-0 shadow-lg rounded-5">
                        <div class="row g-0">
                            <!-- Product Image Section -->
                            <div class="col-md-6">
                                <div class="product-image-container position-relative">
                                    <!-- Image with zoom effect -->
                                    <img src="<%= product.imageProduct %>" class="img-fluid rounded-start product-image"
                                        alt="<%= product.titleProduct %>">
                                    <div class="badge bg-gradient position-absolute top-0 end-0 m-3 p-2 px-3 fs-6">In
                                        Stock</div>
                                </div>
                            </div>

                            <!-- Product Details Section -->
                            <div class="col-md-6">
                                <div class="card-body p-5 d-flex flex-column justify-content-between">
                                    <!-- Title and Price -->
                                    <div class="d-flex justify-content-between align-items-start mb-4">
                                        <h2 class="card-title fw-bold text-dark fs-3">
                                            <%= product.titleProduct %>
                                        </h2>
                                        <span class="h4 text-gradient">$<%= product.priceProduct %></span>
                                    </div>

                                    <!-- Product Description -->
                                    <p class="text-muted fs-5 mb-4">
                                        <%= product.descriptionProduct %>
                                    </p>

                                    <!-- Rating Section -->
                                    <div class="d-flex align-items-center gap-2 mb-4">
                                        <i class="fas fa-star text-warning"></i>
                                        <i class="fas fa-star text-warning"></i>
                                        <i class="fas fa-star text-warning"></i>
                                        <i class="fas fa-star text-warning"></i>
                                        <i class="fas fa-star-half-alt text-warning"></i>
                                        <span class="text-muted ms-2">(23 Reviews)</span>
                                    </div>

                                    <!-- Quantity and Action Buttons -->
                                    <div class="d-flex flex-column gap-3 align-items-start">
                                        <form action="/cart/add_cart" method="POST"
                                            class="d-flex flex-column align-items-start">
                                            <!-- Quantity Input Above Buttons -->
                                            <div class="mb-4 d-flex align-items-center">
                                                <label for="quantity" class="form-label me-3 fs-5">Quantity</label>
                                                <input type="number" id="quantity" name="quantity" min="1"
                                                    value="<%= cart.find(item => item.product_id === product.productId)?.quantity || 1 %>"
                                                    class="form-control w-25 text-center fs-5">
                                            </div>

                                            <!-- Quantity Adjustment Buttons -->
                                            <div class="d-flex justify-content-between gap-4 mb-3 w-100">
                                                <button type="button"
                                                    class="btn btn-outline-secondary rounded-circle fs-4"
                                                    id="decrease-btn">-</button>
                                                <button type="button"
                                                    class="btn btn-outline-secondary rounded-circle fs-4"
                                                    id="increase-btn">+</button>
                                            </div>

                                            <!-- Hidden Product Data -->
                                            <input type="hidden" name="product_id" value="<%= product.productId %>">
                                            <input type="hidden" name="product_name"
                                                value="<%= product.titleProduct %>">
                                            <input type="hidden" name="product_price"
                                                value="<%= product.priceProduct %>">
                                            <input type="hidden" name="imageProduct"
                                                value="<%= product.imageProduct %>" />

                                            <!-- Add to Cart Button -->
                                            <button class="btn btn-gradient btn-lg px-5 py-3 fs-5 w-100"
                                                type="submit">Add to Cart</button>
                                        </form>

                                        <!-- Buy Now Button -->
                                        <button class="btn btn-outline-gradient btn-lg px-5 py-3 fs-5 w-100">Buy
                                            Now</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../partails/footer') -%>

            <script>
                // Increase quantity
                document.getElementById('increase-btn').addEventListener('click', function () {
                    let quantityInput = document.getElementById('quantity');
                    let currentQuantity = parseInt(quantityInput.value);
                    quantityInput.value = currentQuantity + 1;
                });

                // Decrease quantity
                document.getElementById('decrease-btn').addEventListener('click', function () {
                    let quantityInput = document.getElementById('quantity');
                    let currentQuantity = parseInt(quantityInput.value);
                    if (currentQuantity > 1) {
                        quantityInput.value = currentQuantity - 1;
                    }
                });
            </script>

            <style>
                /* Product Image with zoom effect */
                .product-image {
                    transition: transform 0.2s ease;
                    width: 100%;
                    /* Ensure the image takes full width */
                }

                .product-image:hover {
                    transform: scale(1.05);
                }
                /* Button Styles */
                .btn-gradient {
                    background: linear-gradient(45deg, #ff5e62, #ff9966);
                    color: white;
                }

                .btn-outline-gradient {
                    border: 2px solid #ff5e62;
                    color: #ff5e62;
                }

                .btn-outline-gradient:hover {
                    background: #ff5e62;
                    color: white;
                }

                /* Adjust Button Sizes */
                .btn-lg {
                    padding: 15px 25px;
                }

                /* Adjust quantity input size */
                .form-control {
                    font-size: 1.2rem;
                    /* Larger text */
                    padding: 10px;
                    /* Increase padding */
                }

                /* Responsive Styling */
                @media (max-width: 768px) {
                    .product-card {
                        margin: 20px 0;
                    }

                    .btn-gradient {
                        
                        width: 113px;
                    }

                    .card-body {
                        padding: 2rem;
                    }

                    .form-control {
                        width: 50%;
                        /* Adjust width on small screens */
                    }
                }


                .product-image {
                    object-fit: fill;
                    width: 100%;
                    height: 100%;
                }
            </style>