<%- include('../partails/header') -%>
    <%- include('../partails/navbar') -%>
        <div class="container">
            <div class="row mt-4">
                <div class="col-md-9 offset-md-3">
                    <h1 class="display-4">Add New Product:</h1>
                    <hr>
                    <% if(locals.errors) {%>
                        <% errors.forEach((err)=> {%>
                            <div class="alert alert-danger">
                                <%=err.msg %>
                            </div>
                            <%})%>
                                <%}%>
                                    <form action="/product/createProduct" method="post">
                                        <div class="form-group">
                                            <label for="image">Image Product</label>
                                            <input type="file" name="image" id="image" class="form-control">
                                        </div>

                                        <div class="form-group pt-4">
                                            <label for="title">Title Product</label>
                                            <input name="title" rows="4" id="title" class="form-control"></input>
                                        </div>

                                        <div class="form-group pt-4">
                                            <label for="price">Price Product</label>
                                            <input type="text" name="price" id="price" class="form-control">
                                        </div>

                                        <div class="form-group pt-4">
                                            <label for="description">Description Product</label>
                                            <textarea type="text" name="description" id="description"
                                                class="form-control" placeholder="Discribe Your Product"></textarea>
                                        </div>


                                        <div class="form-group pt-4">
                                            <button type="submit" class="btn btn-primary"> Create</button>
                                        </div>
                                    </form>
                </div>
            </div>
        </div>


        <%- include('../partails/footer') -%>