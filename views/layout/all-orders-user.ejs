<%- include('../partails/header') -%>
    <%- include('../partails/navbar') -%>

        <div class="container mt-5">
            <h2 class="text-center mb-4">My Orders</h2>

            <% if (orders.length===0) { %>
                <div class="alert alert-warning text-center" role="alert">
                    <i class="fas fa-exclamation-circle"></i> You have not placed any orders yet.
                </div>
                <% } else { %>
                    <% orders.forEach(order=> { %>
                        <div class="card mb-4 shadow-sm">
                            <div class="card-header bg-primary text-white">
                                <h4>Order Number: <%= order._id %>
                                </h4>
                            </div>
                            <div class="card-body">
                                <p><strong>User:</strong>
                                    <%= order.username %>
                                </p>
                                <p><strong>Phone Number:</strong>
                                    <%= User.phone %>
                                </p>
                                <p><strong>Order Date:</strong>
                                    <%= new Date(order.createdAt).toLocaleDateString() %>
                                </p>
                                <p><strong>Total Price:</strong> $<%= order.totalPrice.toFixed(2) %>
                                </p>
                                <p><strong>Status:</strong>
                                    <span class="badge 
                            <%= order.status === 'Completed' ? 'bg-success' : 
                                order.status === 'On the Way' ? 'bg-info' : 
                                order.status === 'Preparing' ? 'bg-warning' : 
                                'bg-secondary' %>">
                                        <%= order.status %>
                                    </span>
                                </p>
                                <h5 class="mt-3">Items:</h5>
                                <ul class="list-group">
                                    <% order.items.forEach(item=> { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span>
                                                <%= item.product_name %> - <%= item.quantity %> Ã— $<%=
                                                            item.product_price.toFixed(2) %>
                                            </span>
                                            <span class="badge bg-secondary">$<%= (item.product_price *
                                                    item.quantity).toFixed(2) %></span>
                                        </li>
                                        <% }) %>
                                </ul>
                            </div>
                        </div>
                        <% }) %>
                            <% } %>
                                <% if (lastOrder) { %>
                                    <div class="text-center mt-4">
                                        <a href="/orders/order-details/<%= lastOrder._id %>"
                                            class="btn btn-success btn-lg">
                                            View Last Order
                                        </a>
                                    </div>
                                    <% } else { %>
                                        <p class="text-center mt-4 text-muted">No recent orders found.</p>
                                        <% } %>
        </div>
        <%- include('../partails/footer') -%>