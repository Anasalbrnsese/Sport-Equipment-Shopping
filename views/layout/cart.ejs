<%- include('../partails/header') -%>
    <%- include('../partails/navbar') -%>
        <%- include('../partails/flashMessageLogin') -%>

            <div class="container my-5">
                <h2 class="text-center mb-4 text-success"><i class="fas fa-shopping-cart"></i> Your Shopping Cart</h2>

                <div class="card shadow-lg rounded-3">
                    <div class="card-body p-4">

                        <table class="table table-striped table-bordered align-middle mb-0">
                            <thead class="table-success">
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Total Price</th>
                                    <th>Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (cart.length> 0) { %>
                                    <% let total=0; %>
                                        <% cart.forEach(item=> { %>
                                            <tr class="align-middle">
                                                <td class="text-start">
                                                    <img src="<%= item.imageProduct %>" alt="<%= item.product_name %>"
                                                        class="img-fluid rounded-3 me-3"
                                                        style="width: 80px; height: 80px;">
                                                    <strong>
                                                        <%= item.product_name %>
                                                    </strong>
                                                </td>
                                                <td>
                                                    <div class="d-flex justify-content-center">
                                                        <a href="/cart/decrease?id=<%= item.product_id %>"
                                                            class="btn btn-outline-dark btn-sm mx-1"><i
                                                                class="fas fa-minus"></i></a>
                                                        <span class="mx-2">
                                                            <%= item.quantity %>
                                                        </span>
                                                        <a href="/cart/increase?id=<%= item.product_id %>"
                                                            class="btn btn-outline-dark btn-sm mx-1"><i
                                                                class="fas fa-plus"></i></a>
                                                    </div>
                                                </td>
                                                <td>$<%= item.product_price %>
                                                </td>
                                                <td>$<%= item.quantity * item.product_price %>
                                                </td>
                                                <td>
                                                    <a href="/cart/remove_item?id=<%= item.product_id %>"
                                                        class="btn btn-outline-danger btn-sm"><i
                                                            class="fas fa-trash-alt"></i> Remove</a>
                                                </td>
                                            </tr>
                                            <% total +=item.quantity * item.product_price; %>
                                                <% }); %>
                                                    <tr class="table-light">
                                                        <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                                        <td>$<%= total %>
                                                        </td>
                                                        <td></td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="5" class="text-center py-4">
                                                            <form action="/orders/confirm-order" method="POST">
                                                                <input type="hidden" name="user_id"
                                                                    value="<%= User._id %>">
                                                                <input type="hidden" name="username"
                                                                    value="<%= User.name %>">
                                                                <% cart.forEach(item=> { %>
                                                                    <input type="hidden" name="cartItem[]"
                                                                        value='<%= JSON.stringify(item) %>'>
                                                                    <% }); %>
                                                                        <button type="submit"
                                                                            class="btn btn-success btn-lg">
                                                                            <i class="fas fa-check-circle"></i> Confirm
                                                                            Order
                                                                        </button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="5" class="text-center py-4"><em>Your cart is
                                                                    empty ðŸ›’</em></td>
                                                        </tr>
                                                        <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <%- include('../partails/footer') -%>

                <style>
                    /* Custom button design for the cart page */
                    .btn-outline-dark {
                        border: 2px solid #004d00;
                        /* Dark green border */
                        color: #004d00;
                        font-weight: bold;
                        transition: background-color 0.3s, color 0.3s;
                    }

                    .btn-outline-dark:hover {
                        background-color: #004d00;
                        color: white;
                    }

                    .btn-outline-danger {
                        border: 2px solid #dc3545;
                        color: #dc3545;
                        font-weight: bold;
                        transition: background-color 0.3s, color 0.3s;
                    }

                    .btn-outline-danger:hover {
                        background-color: #dc3545;
                        color: white;
                    }

                    /* Table and header style */
                    .table-success {
                        background-color: #28a745 !important;
                        color: white;
                    }

                    /* Card Style */
                    .card {
                        border: 1px solid #e0e0e0;
                        border-radius: 15px;
                        transition: box-shadow 0.3s ease;
                    }

                    .card-body {
                        padding: 20px;
                        background-color: #f8f9fa;
                    }

                    .card:hover {
                        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                    }

                    /* Table Styling */
                    .table-bordered {
                        border: 1px solid #ddd;
                    }

                    .table-striped tbody tr:nth-of-type(odd) {
                        background-color: #f9f9f9;
                    }

                    .table-dark th {
                        background-color: #343a40;
                        color: white;
                    }

                    /* Styling for empty cart message */
                    .table-light {
                        background-color: #f1f1f1;
                    }

                    .text-muted {
                        font-size: 0.9rem;
                    }
                </style>