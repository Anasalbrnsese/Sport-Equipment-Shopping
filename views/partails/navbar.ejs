        color: white;
        animation: bounce 0.5s ease-in-out infinite;
    }

    /* Cart count bounce animation */
    @keyframes bounce {

        0%,
        100% {
            transform: translate(50%, -50%);
        }

        50% {
            transform: translate(50%, -60%);
        }
    }

