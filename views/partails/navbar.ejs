        transition: transform 0.3s ease-in-out;
    }

    .cart-link .fa-shopping-cart:hover {
        transform: scale(1.2);
    }

    /* Adjust the cart count positioning */
    #cartCount {
        font-size: 1rem;
        font-weight: bold;
        padding: 0.2rem 0.4rem;
        border-radius: 50%;
        position: absolute;
        top: 10px;
        /* Align with the top of the cart icon */
