        font-weight: 500;
        transition: color 0.3s ease, transform 0.3s ease-in-out;
    }

    .navbar-nav .nav-link:hover {
        color: #007bff;
        /* Blue color on hover */
        transform: scale(1.1);
    }

    /* Cart Icon and Count Styling */
    .cart-link {
        position: relative;
        font-size: 1.3rem;
        color: #f8f9fa;
        transition: color 0.3s ease-in-out;
    }

    .cart-link:hover {
        color: #28a745;
        /* Green on hover */
    }

    .cart-link .fa-shopping-cart {
        font-size: 1.6rem;
        /* Increased cart icon size */
